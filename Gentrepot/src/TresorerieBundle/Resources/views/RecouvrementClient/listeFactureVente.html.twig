{% extends 'backend/AgentCaisse/indexAgentCaisse.html.twig' %}
{% block title %} table {% endblock %}

{% block content %}

    <h2>liste des facture clients </h2>

    <table border="1" class="display table table-bordered table-striped" cellspacing="0" width="100%">
        <tr>
            <th>numero</th>
            <th>Date creation</th>
            <th>etat</th>
            <th>total TTC</th>
            <th>total paye</th>
            <th>reste a payer</th>
            <th>Date echaillance de paiement</th>
            <th>Action</th>




        </tr>
        {%for f in factures %}  <tr>
            <td>{{f.id}}</td>
            <td>{{f.dateCreation|date('Y-m-d')}}</td>
            <td>

                <span class="btn btn-success btn-xs btn-labeled">{{f.etat}}</span>
            </td>
            <td>{{f.totalTTC}}</td>
            <td>{{f.totalPaye}}</td>
            <td>{{f.resteAPaye}}</td>
            <td>{{f.dateEchaillancePaiement|date('Y-m-d')}}</td>


           {% if(f.resteAPaye != 0) %}


                <td><a class="btn btn-success btn-xs btn-labeled" href="{{ path('tresorerie_ajouterRecouvrementChequeF',{'id':f.id}) }}">payer par cheque<span class="btn-label btn-label-right"><i class="fa fa-check"></i></span></a>
                   <a class="btn btn-success btn-xs btn-labeled" href="{{ path('tresorerie_ajouterRecouvrementEspeceF',{'id':f.id}) }}">payer en espece<span class="btn-label btn-label-right"><i class="fa fa-check"></i></span></a> </td>



        {% endif %}






        </tr>    {% endfor %}

    </table>


{% endblock %}