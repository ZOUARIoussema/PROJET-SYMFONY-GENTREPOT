{% extends 'backend/AgentCaisse/indexAgentCaisse.html.twig' %}
{% block title %} table {% endblock %}

{% block content %}

    <h2>Liste des recouvrement client par espece  </h2>

    <table border="1" class="display table table-bordered table-striped" cellspacing="0" width="100%">
        <tr>

            <th>Date creation</th>
            <th>facture</th>

            <th>montant</th>
            <th>Action</th>

        </tr>
        {%for r in roucouvrementE %}  <tr>

            <td>{{r.dateCreation|date('Y-m-d')}}</td>
            <td>{{r.facture.id}}</td>
            <td>{{r.montant}}</td>


            {% if ("now"|date('Y-m-d') ==  r.dateCreation|date('Y-m-d') ) %}

            <td><a class="btn btn-success btn-xs btn-labeled" href="{{ path('tresorerie_modifierRecouvrementEspece',{'id':r.id}) }}">modifier<span class="btn-label btn-label-right"><i class="fa fa-pencil"></i></span></a>
             <a class="btn btn-danger btn-xs btn-labeled" href="{{ path('tresorerie_supprimerRecouvrementEspece',{'id':r.id}) }}">supprimer<span class="btn-label btn-label-right"><i class="fa fa-times"></i></span></a> </td>


            {% endif %}




        </tr>    {% endfor %}





        <tr>


            <td>Total   </td>

            <td>   </td>




            <td>{{ tespece }}  </td>





        </tr>



    </table>

    <a class="label label-success label-bordered" href="{{ path('tresorerie_ajouterRecouvrementEspece') }}">Ajouter recouvrement en espece</a>


    <h2>Liste des recouvrement client par cheque  </h2>

    <table border="1" class="display table table-bordered table-striped" cellspacing="0" width="100%">
        <tr>

            <th>Date creation</th>
            <th>numero cheque</th>
            <th>Date cheque</th>
            <th>facture</th>

            <th>montant</th>
            <th>Action</th>

        </tr>
        {%for r in recouvrementC %}  <tr>

            <td>{{r.dateCreation|date('Y-m-d')}}</td>
            <td>{{r.numeroCheque}}</td>
            <td>{{r.dateCheque|date('Y-m-d')}}</td>
            <td>{{r.facture.id}}</td>
            <td>{{r.montant}}</td>



            {% if ("now"|date('Y-m-d') ==  r.dateCreation|date('Y-m-d') ) %}


            <td><a class="btn btn-success btn-xs btn-labeled" href="{{ path('tresorerie_modifierRecouvrementCheque',{'id':r.id}) }}">modifier<span class="btn-label btn-label-right"><i class="fa fa-pencil"></i></span></a>
            <a class="btn btn-danger btn-xs btn-labeled" href="{{ path('tresorerie_supprimerRecouvrementCheque',{'id':r.id}) }}">supprimer<span class="btn-label btn-label-right"><i class="fa fa-times"></i></span></a> </td>



            {% endif %}



        </tr>    {% endfor %}



        <tr>


            <td>Total   </td>

            <td>   </td>

            <td>   </td>
            <td>   </td>

            <td>{{ tcheque }}  </td>








        </tr>




    </table>

    <a  class="label label-success label-bordered" href="{{ path('tresorerie_ajouterRecouvrementCheque') }}">Ajouter recouvrement en cheque</a>


{% endblock %}