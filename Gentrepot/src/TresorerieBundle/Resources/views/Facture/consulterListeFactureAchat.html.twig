{% extends 'backend/AgentCaisse/indexAgentCaisse.html.twig' %}
{% block title %} table {% endblock %}

{% block content %}

    <h2>liste des facture fournisseurs </h2>

    <table border="1" class="display table table-bordered table-striped" cellspacing="0" width="100%">
        <tr>
            <th>numero</th>
            <th>Date creation</th>
            <th>etat</th>
            <th>total TTC</th>
            <th>total paye</th>
            <th>reste a payer</th>




        </tr>
        {%for f in factures %}  <tr>
            <td>{{f.numeroF}}</td>
            <td>{{f.dateCreation|date}}</td>
            <td>

                <span class="btn btn-success btn-xs btn-labeled">{{f.etat}}</span>
            </td>
            <td>{{f.totalTTC}}</td>
            <td>{{f.totalPaye}}</td>
            <td>{{f.resteAPaye}}</td>








        </tr>    {% endfor %}

    </table>

    <a  class="label label-success label-bordered" href="{{ path('tresorerie_ajouterFacture') }}">Ajouter facture</a>


{% endblock %}