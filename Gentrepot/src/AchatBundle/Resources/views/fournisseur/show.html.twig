{% block title %} fournisseur  {% endblock  %}

{% block content %}

<div class="col-md-8 col-md-offset-2">
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">
                <h2 style="text-align: center">Fournisseur</h2>
            </div>

        </div>




    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ fournisseur.id }}</td>
        </tr>
        <tr>
            <th>Raisonsociale</th>
            <td>{{ fournisseur.raisonSociale }}</td>
        </tr>
        <tr>
            <th>Numerotelephone</th>
            <td>{{ fournisseur.numeroTelephone }}</td>
        </tr>
        <tr>
