        </tr>
        </tbody>
    </table>


            <a href="{{ path('fournisseur_index') }}"><button type="button" class="btn btn-primary btn-wide">
                    Retour a la liste</button></a>

            <a href="{{ path('fournisseur_edit', { 'id': fournisseur.id }) }}"><button type="button" class="btn btn-primary btn-wide">
                    Modifier</button></a>

