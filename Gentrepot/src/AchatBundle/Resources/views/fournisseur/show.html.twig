{% extends 'backend/achat/index.html.twig' %}
{% block title %} fournisseur  {% endblock  %}

{% block content %}
    <h1>Fournisseur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fournisseur.id }}</td>
            </tr>
            <tr>
                <th>Raisonsociale</th>
                <td>{{ fournisseur.raisonSociale }}</td>
            </tr>
            <tr>
                <th>Numerotelephone</th>
                <td>{{ fournisseur.numeroTelephone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ fournisseur.adresse }}</td>
            </tr>
            <tr>
                <th>Adressemail</th>
                <td>{{ fournisseur.adresseMail }}</td>
            </tr>
            <tr>
                <th>Matriculefiscale</th>
                <td>{{ fournisseur.matriculeFiscale }}</td>
            </tr>
            <tr>
                <th>Codepostale</th>
                <td>{{ fournisseur.codePostale }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fournisseur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('fournisseur_edit', { 'id': fournisseur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
