{% extends 'backend/achat/index.html.twig' %}
{% block title %} les fournisseurs  {% endblock  %}

{% block content %}

    <section class="section">
    <div class="container-fluid">
    <div class="row">
    <div class="col-md-8 col-md-offset-2">
    <div class="panel">
    <div class="panel-heading">
        <div class="panel-title">
            <h4 style="text-align: center">Liste des fournisseurs</h4>
        </div>
    </div>


    <div class="panel-body p-20 overflow-x-auto">
    <table class="table table-striped">
    <table id="example" class="display table table-striped table-bordered" cellspacing="0" width="100%">

        <thead>
        <tr>

            <th>Raison sociale</th>
            <th>Numero de telephone</th>
            <th>Adresse</th>
            <th>Adresse mail</th>
            <th>Matricule fiscale</th>

            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for fournisseur in fournisseurs %}
            <tr>

                <td>{{ fournisseur.raisonSociale }}</td>
                <td>{{ fournisseur.numeroTelephone }}</td>
                <td>{{ fournisseur.adresse }}</td>
                <td>{{ fournisseur.adresseMail }}</td>
                <td>{{ fournisseur.matriculeFiscale }}</td>

                <td>

                    <a href="{{ path('fournisseur_show', { 'id': fournisseur.id }) }}"><button type="button" class="btn btn-info btn-wide">show</button></a>
                    <br>
                    <a href="{{ path('fournisseur_edit', { 'id': fournisseur.id }) }}"><button type="button" class="btn btn-info btn-wide">edit</button></a>

                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>



    <a href="{{ path('fournisseur_new') }}"><button type="button" class="btn btn-info btn-wide">Create a new fournisseur</button></a>

{% endblock %}