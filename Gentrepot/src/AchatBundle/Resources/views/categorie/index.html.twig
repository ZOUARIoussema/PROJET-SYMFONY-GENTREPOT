{% extends 'backend/achat/index.html.twig' %}
{% block title %} les categories  {% endblock  %}

{% block content %}


    <section class="section">


    <div class="col-md-8 col-md-offset-2">
    <div class="panel">
    <div class="panel-heading">
        <div class="panel-title">
            <h4 style="text-align: center">liste des categories</h4>
        </div>

    </div>
    <div class="panel-body p-20">
    <table class="table table-striped">



    <table id="example" class="display table table-striped table-bordered" cellspacing="0" width="100%" >
        <thead>
        <tr>

            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>

                <td>{{ categorie.nom }}</td>
                <td>

                    <a href="{{ path('categorie_show', { 'id': categorie.id }) }}"><button type="button" class="btn btn-info btn-wide">show</button></a>
                    <br>
                    <a href="{{ path('categorie_edit', { 'id': categorie.id }) }}"><button type="button" class="btn btn-info btn-wide">edit</button></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('categorie_new') }}"><button type="button" class="btn btn-info btn-wide">Create a new categorie</button></a>


{% endblock %}