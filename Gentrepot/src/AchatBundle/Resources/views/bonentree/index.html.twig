{% extends 'backend/achat/index.html.twig' %}
{% block title %} les bons d'entree  {% endblock  %}


{% block content %}


<section class="section">


    <div class="col-md-8 col-md-offset-2">
        <div class="panel">
            <div class="panel-heading">
                <div class="panel-title">
                    <h5 style="text-align: center">bons d'entree</h5>
                </div>
            </div>
            <div class="panel-body p-20">

                <table class="table table-striped">

    <table border="2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Date de production</th>
                <th>Date d'expiration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bonEntree in bonEntrees %}
            <tr>
                <td><a href="{{ path('bonentree_show', { 'id': bonEntree.id }) }}">{{ bonEntree.id }}</a></td>
                <td>{% if bonEntree.date %}{{ bonEntree.date|date('Y-m-d') }}{% endif %}</td>
                <td>{% if bonEntree.dateProduction %}{{ bonEntree.dateProduction|date('Y-m-d') }}{% endif %}</td>
                <td>{% if bonEntree.dateExpiration %}{{ bonEntree.dateExpiration|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bonentree_show', { 'id': bonEntree.id }) }}">show</a>
                        </li>
                        <li>
                            
                            <a href="{{ path('bonentree_edit', { 'id': bonEntree.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bonentree_new') }}">Create a new bonEntree</a>
        </li>
    </ul>
{% endblock %}