{% extends 'backend/achat/index.html.twig' %}
{% block title %} les bons d'entree  {% endblock  %}


{% block content %}
    <section class="section">


    <div class="col-md-8 col-md-offset-2">
    <div class="panel">
    <div class="panel-heading">
        <div class="panel-title">
            <h4 style="text-align: center">les bons d'entrees</h4>
        </div>

    </div>
    <div class="panel-body p-20">
    <table class="table table-striped">




    <table id="example" class="display table table-striped table-bordered" cellspacing="0" width="100%" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Date de production</th>
                <th>Date d'expiration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bonEntree in bonEntrees %}
            <tr>
                <td><a href="{{ path('bonentree_show', { 'id': bonEntree.id }) }}">{{ bonEntree.id }}</a></td>
                <td>{% if bonEntree.date %}{{ bonEntree.date|date('Y-m-d') }}{% endif %}</td>
                <td>{% if bonEntree.dateProduction %}{{ bonEntree.dateProduction|date('Y-m-d') }}{% endif %}</td>
                <td>{% if bonEntree.dateExpiration %}{{ bonEntree.dateExpiration|date('Y-m-d') }}{% endif %}</td>
                <td>

                            <a href="{{ path('bonentree_show', { 'id': bonEntree.id }) }}"><button type="button" class="btn btn-info btn-wide">show</button></a>
                            <br>


                            <a href="{{ path('bonentree_edit', { 'id': bonEntree.id }) }}"><button type="button" class="btn btn-info btn-wide">edit</button></a><br>
                            <a href="{{ path('PDF_new', { 'id': bonEntree.id }) }}"><button type="button" class="btn btn-info btn-wide">Imprimer</button></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('bonentree_new') }}"><button type="button" class="btn btn-info btn-wide">Create a new categorie</button></a>

{% endblock %}