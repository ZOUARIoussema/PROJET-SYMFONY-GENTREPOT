{% extends 'backend/achat/index.html.twig' %}
{% block title %} bon d'entree  {% endblock  %}


{% block content %}
    <h1>Bon d'entree</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bonEntree.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if bonEntree.date %}{{ bonEntree.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de production</th>
                <td>{% if bonEntree.dateProduction %}{{ bonEntree.dateProduction|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date d'expiration</th>
                <td>{% if bonEntree.dateExpiration %}{{ bonEntree.dateExpiration|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bonentree_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bonentree_edit', { 'id': bonEntree.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
