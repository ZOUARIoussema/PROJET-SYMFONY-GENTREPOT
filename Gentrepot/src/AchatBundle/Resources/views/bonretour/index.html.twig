{% extends 'backend/achat/index.html.twig' %}
{% block title %} les bons de retour {% endblock  %}


{% block content %}
<section class="section">


    <div class="col-md-8 col-md-offset-2">
        <div class="panel">
            <div class="panel-heading">
                <div class="panel-title">
                    <h4 style="text-align: center">les bons de retour</h4>
                </div>

            </div>
            <div class="panel-body p-20">
                <table class="table table-striped">




                    <table id="example" class="display table table-striped table-bordered" cellspacing="0" width="100%" >
                        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Motif de retour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bonRetour in bonRetours %}
            <tr>
                <td><a href="{{ path('bonretour_show', { 'id': bonRetour.id }) }}">{{ bonRetour.id }}</a></td>
                <td>{% if bonRetour.date %}{{ bonRetour.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ bonRetour.motifDeRetour }}</td>
                <td>

                            <a href="{{ path('bonretour_show', { 'id': bonRetour.id }) }}">show</a>

                            <a href="{{ path('bonretour_edit', { 'id': bonRetour.id }) }}">edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('bonretour_new') }}"><button type="button" class="btn btn-info btn-wide">Create a new categorie</button></a>

{% endblock %}
