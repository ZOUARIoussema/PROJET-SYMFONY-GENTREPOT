{% extends 'backend/achat/index.html.twig' %}
{% block title %} les sous categories  {% endblock  %}
{% block content %}


<section class="section">


    <div class="col-md-8 col-md-offset-2">
        <div class="panel">
            <div class="panel-heading">
                <div class="panel-title">
                    <h4 style="text-align: center">liste des sous categories</h4>
                </div>
            </div>
            <div class="panel-body p-20">

                <table class="table table-striped">

                    <table id="example" class="display table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                        <tr>

                            <th>Name</th>
                            <th>Categorie</th>

                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for sousCategorie in sousCategories %}
                            <tr>

                                <td>{{ sousCategorie.name }}</td>
                                <td>{{ sousCategorie.categorie }}</td>



                                <td>

                                    <a href="{{ path('souscategorie_show', { 'id': sousCategorie.id }) }}"><button type="button" class="btn btn-info btn-wide">show</button></a>
                                    <br>

                                    <a href="{{ path('souscategorie_edit', { 'id': sousCategorie.id }) }}"><button type="button" class="btn btn-info btn-wide">edit</button></a>

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                    <a href="{{ path('souscategorie_new') }}"><button type="button" class="btn btn-info btn-wide">Ajouter une sous categorie</button></a>

                    {% endblock %}