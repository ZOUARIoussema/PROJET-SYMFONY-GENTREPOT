{% extends 'backend/Vente/index.html.twig' %}
{% block title %} Liste des Commandes {% endblock %}


{% block content %}

    <section class="section">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-8 col-md-offset-2">


                    <div class="panel">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <h5 class="container-fluid" style="text-align: center">Liste des clients</h5>
                            </div>
                        </div>
                        <div class="panel-body p-20">

                            <table class="table table-hover table-bordered">
                                <thead>
                                <tr>
                                    <th>Prix</th>
                                    <th>Total</th>
                                    <th>Quantite</th>
                                    <th>TVA</th>
                                    <th>Produit</th>
                                    <th>Modifier</th>

                                </tr>
                                </thead>
                                <tbody>


                                {% for e in liste %}

                                        <tr>
                                            <th scope="row">{{e.prix}}</th>

                                            <td>{{e.total}}</td>
                                            <td>{{e.quantite}}</td>
                                            <td>{{e.tva}}</td>
                                            <td>{{e.produit}}</td>
                                            <td><<a href="{{ path('update',{'id':e.id})}}"> update </a>

                                            <td><<a href="{{ path('delete',{'id':e.id})}}"> Supprimer </a>

                                        </tr>

                                {% endfor %}


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}