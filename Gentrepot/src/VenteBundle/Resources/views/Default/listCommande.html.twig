{% extends 'backend/Vente/index.html.twig' %}
{% block title %} Liste des Commandes {% endblock %}
{% block head %}
{% endblock %}
{% block content %}

    <section class="section" style="align-content: center">
    <div class="container-fluid"  style="align-items: center" align="center">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">    <a class="dashboard-stat bg-success" href="#">
        <span class="number counter">{{ total }}</span>
        <span class="name">Total Revenu</span>
        <span class="bg-icon"><i class="fa fa-check"></i></span>
    </a>
    </div></div></div></section>
    <section class="section">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <script
                            src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
                            integrity="sha256-pasqAKBDmFT4eHoN2ndd6lN370kFiGUFyTiUHWhU7k8="
                            crossorigin="anonymous"></script>


                    <div class="panel">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <h5 class="container-fluid" style="text-align: center">Liste des commandes</h5>


                            </div>
                        </div>
                        <div class="panel-body p-20">

                            <table class="table table-hover table-bordered">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Total</th>
                                    <th>Date</th>
                                    <th>etat</th>
                                    <th>Taux Remise</th>
                                    <th>User</th>
                                    <th>Action</th>



                                </tr>
                                </thead>
                                <tbody>


                                {% for e in liste %}

                                    <tr>
                                        <th scope="row">{{e.id}}</th>

                                        <td>{{e.totalC}}</td>
                                        <td>{{e.dateC | date}}</td>
                                        <td>
                                            {% if e.etat == 'valider' %}<span class="label label-success label-wide">{{e.etat}}</span>
                                            {% elseif e.etat == 'En attente' %}
                                                <span class="label label-warning label-wide">{{e.etat}}</span>
                                            {% endif %}
                                        </td>
                                        <td>{{e.tauxRemise}}</td>



                                        <td>{{e.user}}</td>

                               <td>                                         <button type="button" class="btn btn-info btn-xs btn-labeled next-btn">   <a href="{{ path('detail-commande',{'id':e.id}) }}" class="checkout-button button alt wc-forward rounded"> Details </a><span class="btn-label btn-label-right"><i class="fa fa-pencil"></i></span></button>
                               </td>


                                    </tr>

                                {% endfor %}


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}