{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="content-container no-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="main-content">
                    <div class="commerce commerce-account">
                        <h2 class="commerce-account-heading">Login</h2>
<form action="{{ path("fos_user_security_check") }}" method="post" class="login" >
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-row form-row-wide">
    <label for="username">{{ 'security.login.username'|trans }}  <span class="required">*</span></label>
    <input type="text"  class="input-text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>

    <div class="form-row form-row-wide">
    <label for="password">{{ 'security.login.password'|trans }} <span class="required">*</span> </label>
    <input type="password"  class="input-text" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>
    <div class="form-row">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label  class="inline form-flat-checkbox"for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    </div>
    <br>
    <button  class="btn btn-outline rounded" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" /> Connexion</button>

    <div class="lost_password">
        <a href="#">Lost your password?</a>
    </div>
</form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
